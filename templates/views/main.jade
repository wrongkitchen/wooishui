extends ../layouts/default

		
block content

	div.pages.navbar-through
		div.page(data-page="home")
			div.content-block-title My debts
			div.list-block
				ul#dataList

		div.page.cached(data-page="deail", data-nav="back")
			div.content-block-title Debts detail
			div.list-block
				ul#dataListDetail

		div.page.cached(data-page="form", data-nav="cancel")
			div.content-block-title Create new debt
			div.list-block
				ul
					li.item-content
						div.item-inner
							div.item-title.label Name
							div.item-input
								input(type="text", placeholder="Name")
			div.content-block
				div.row
					div.col-100
						a.button.button-fill.color-red.button-big(onclick="sgd.changeSection('form-second')") Enter
			div.content-block-label 
				p.or or
			div.content-block
				div.row
					div.col-100
						a.button.button-fill.button-big.open-popup(href="#friendList") Select other wooishui user

		div.page.cached#formSecond(data-page="form-second", data-nav="cancel")
			div.content-block
				div.buttons-row
					a.button.button-big.button-fill.color-gray.active HE / SHE
					a.button.button-big.button-fill.color-gray I
				div.buttons-row(style="margin-top:-1px;position:relative;")
					a.button.button-big.button-fill.color-gray.active OWN
					a.button.button-big.button-fill.color-gray RETURNED
				div.buttons-row(style="margin-top:-1px;position:relative;")
					a.button.button-big.button-fill.color-gray HIM / HER
					a.button.button-big.button-fill.color-gray.active ME
			div.list-block
				ul
					li.item-content
						div.item-inner
							div.item-title.label AMOUNT
							div.item-input
								input(type="text", placeholder="AMOUNT")
					li.item-content.align-top
						div.item-inner
							div.item-title.label DESCRIPTION
							div.item-input
								textarea(placeholder="DESCRIPTION")
			div.content-block
				div.row
					div.col-100
						a.button.button-fill.button-big.color-red(href="#") CONFIRM
			
block panel

	div#friendList.popup.page.navbar-fixed
		div.navbar
			div.navbar-inner
				div.left
				div.center Friend list
				div.right 
					a.headerBtn.black.icon-remove.close-popup(href="#")
		
		div.page-content
			div.infinite-scroll
				
				div.inputField
					input#friendListSearch(type="text", placeholder="search")

				div#regFriend
					div.content-block-title WOOISHUI USER
					div.list-block
						ul
				div#nonRegFriend
					div.content-block-title FACEBOOK FRIEND LIST
					div.list-block
						ul

	script#popupFriendList(type="text/template").
		<li class="item-content">
			<div class="item-media" style='background-image:url(<%=picture.data.url%>)'></div>
			<div class="item-inner">
				<div class="item-title"><%=name%></div>
			</div>
			<input type="hidden" value="<%=id%> }}" class="inviteToken" />
		</li>
	script#mainListTmpl(type="text/template").
		<li class="item-content">
			<% if(fbConnected){ %>
				<div class="item-media" style="background-image:url(http://graph.facebook.com/<%=id%>/picture)"></div>
			<% } %>
			<div class="item-inner">
				<div class="item-title"><%=name%></div>
				<div class="item-label <%=(price > 0) ? 'color-green' : 'color-red'%>">$<%=price%></div>
			</div>
			<input type="hidden" class="cid" value="<%=id%>"></input>
		</li>
	script#debtsTmpl(type="text/template").
		<li class="item-content">
			<% if(fbConnected){ %>
				<div class="item-media" style="background-image:url(http://graph.facebook.com/<%=creditorUID%>/picture)"></div>
			<% } %>
			<div class="item-inner">
				<div class="item-title">
					<%=creditorName.first%> <%=creditorName.last%>
				</div>
				<div class="item-label color-red">-$<%=price%></div>
			</div>
			<input type="hidden" class="cid" value="<%=creditorUID%>"></input>
			<input type="hidden" class="indexKey" value="creditorUID"></input>
		</li>
	script#creditsTmpl(type="text/template").
		<li class="item-content">
			<% if(fbConnected){ %>
				<div class="item-media" style="background-image:url(http://graph.facebook.com/<%=creditorUID%>/picture)"></div>
			<% } %>
			<div class="item-inner">
				<div class="item-title">
					<%=debtorsName.first%> <%=debtorsName.last%>
				</div>
				<div class="item-label color-green">$<%=price%></div>
			</div>
			<input type="hidden" class="cid" value="<%=debtorsUID%>"></input>
			<input type="hidden" class="indexKey" value="debtorsUID"></input>
		</li>